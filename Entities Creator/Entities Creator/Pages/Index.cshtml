@page
@model IndexModel
@using Point.Models

<div style="display: flex; justify-content: center; align-items: center; height: 100vh;">
    <div style="width: 320px; background-color: white; border: 1px solid #ddd; padding: 16px;">
        <div class="header" style="margin-bottom: 16px; text-align: center;">
            <button class="close" onclick="closeWindow()"
                style="float: right; background: none; border: none; color: #888; font-size: 16px; cursor: pointer;">X</button>
            <h2 style="margin: 0;">Entities Creator</h2>
        </div>

        <form method="post">
            <div class="row"
                style="display: flex; align-items: center; margin-bottom: 12px; justify-content: space-between;">
                <label for="name" style="width: 30%; text-align: center;border: 1px solid #ddd;">Name</label>
                <input type="text" id="name" name="UserPoint.Name" required
                    style="width: 65%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" />
            </div>
            <div class="row"
                style="display: flex; align-items: center; margin-bottom: 12px; justify-content: space-between;">
                <label for="x" style="width: 30%; text-align: center;border: 1px solid #ddd;">X</label>
                <input type="number" id="x" name="UserPoint.X" required
                    style="width: 65%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" />
            </div>
            <div class="row"
                style="display: flex; align-items: center; margin-bottom: 12px; justify-content: space-between;">
                <label for="y" style="width: 30%; text-align: center;border: 1px solid #ddd;">Y</label>
                <input type="number" id="y" name="UserPoint.Y" required
                    style="width: 65%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" />
            </div>
            <button type="submit" class="send-button" id="sendButton"
                style="width: 50%; padding: 10px; background-color: #007bff; color: white; border: none; border-radius: 4px; font-size: 16px; cursor: pointer; margin: 0 auto; display: block;">Send</button>
        </form>
    </div>
</div>

<script>
    function closeWindow() {
        window.close();
    }
</script>

<script>
    var sendStatus = "@TempData["SendStatus"]";
    if (sendStatus === "success") {
        document.getElementById("sendButton").style.backgroundColor = "green";
    }
    else
        document.getElementById("sendButton").style.backgroundColor = "red";
setTimeout(() => {
    document.getElementById("sendButton").style.backgroundColor= "blue";
}, 1000);


</script>